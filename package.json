{
  "name": "vscode-invoke",
  "displayName": "Invoke (Python Task Executor)",
  "description": "Support for executing Invoke task from Visual Studio Code",
  "author": {
   "name": "David Chancogne"
  },
  "repository": {
   "type": "git",
   "url": "https://github.com/dchancogne/vscode-invoke.git"
  },
  "version": "0.0.12",
  "publisher": "dchanco",
  "icon": "images/invoke-icon.png",
  "galleryBanner": {
   "color": "#171515",
   "theme": "dark"
  },
  "engines": {
    "vscode": "^1.19.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onCommand:extension.invokeVersion",
    "onCommand:extension.invokeTaskCommand",
    "onView:extension.invokeView"
  ],
  "main": "./extension",
  "contributes": {
    "commands": [
      {
        "command": "extension.invokeVersion",
        "title": "Invoke version"
      },
      {
         "command": "extension.invokeTask",
         "title": "Invoke a task"
      }
    ],
    "views": {
      "debug": [
        {
          "id": "extension.invokeView",
          "name": "Invoke"
        }
      ]
    },
    "configuration": {
       "type": "object",
       "title": "VSC Invoke extension configuration",
       "properties": {
         "vsc-invoke.invoke.cmd": {
            "type": "string",
            "default": "invoke",
            "description": "Full name (and optionally path) to invoke command"
         }
       }
    }
  },
  "scripts": {
    "publish": "vsce publish",
    "postinstall": "node ./node_modules/vscode/bin/install",
    "test": "node ./node_modules/vscode/bin/test"
  },
  "devDependencies": {
    "typescript": "^2.6.1",
    "vscode": "^1.1.6",
    "eslint": "^4.6.1",
    "@types/node": "^7.0.43",
    "@types/mocha": "^2.2.42"
  },
  "dependencies": {
    "child_process": "^1.0.2"
  }
}
